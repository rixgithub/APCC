    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active ml-5" href="/logout"><button class="btn btn-outline-dark btn-sm">Log Out</button></a>
      <a class="nav-item nav-link active ml-5" href="/userHome/submit"><button class="btn btn-outline-dark btn-sm">Submit</button></a>
      <a class="nav-item nav-link active ml-5" href="/userHome/chat"><button class="btn btn-outline-dark btn-sm">Chat</button></a>
